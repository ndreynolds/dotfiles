[core]
    excludesfile= ~/.gitignore_global
    deltaBaseCacheLimit = 1G
[user]
    name = Nick Reynolds
    email = ndreynolds@gmail.com
[init]
    templatedir = ~/.git_template
[web]
    browser = open
[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    grep = auto
[diff]
    mnemoicprefix = true
    renames = copies
[merge]
    tool = vimdiff
[github]
    user = ndreynolds
    name = Nick Reynolds
    email = ndreynolds@gmail.com
[fetch]
    recurseSubmodules = true
[grep]
    lineNumber = true
[alias]
    br = branch
    co = checkout
    l  = log --pretty=format:'%Cred %h %Cgreen %ar %Cblue %an: %Creset %s' --graph
    s  = status -sb
    di = diff --cached
    dw = diff
    da = diff HEAD
    todo = grep -n -E "(TODO|FIXME)"
    search = !sh -c 'git log -p -G$1 --all' -
    today = log --since='6am' --committer='Nick Reynolds' --pretty=format:'* %B' --no-merges
[push]
    default = upstream
[include]
    path = ~/.gitconfig_local
