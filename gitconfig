[core]
    excludesfile = ~/.gitignore_global
    deltaBaseCacheLimit = 1G
    ignorecase = false
[user]
    name = Nick Reynolds
    email = ndreynolds@gmail.com
[init]
    templatedir = ~/.git_template
[web]
    browser = open
[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    grep = auto
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
[diff]
    mnemoicprefix = true
    renames = copies
[merge]
    tool = vimdiff
[github]
    user = ndreynolds
    name = Nick Reynolds
    email = ndreynolds@gmail.com
[fetch]
    recurseSubmodules = true
[grep]
    lineNumber = true
[alias]
    br = branch
    co = checkout
    l  = log --pretty=format:'%Cred %h %Cgreen %ar %Cblue %an: %Creset %s' --graph
    s  = status -sb
    di = diff --cached
    dw = diff
    da = diff HEAD
    wip = commit -m "WIP"
    todo = grep -n -E "(TODO|FIXME)"
    search = !sh -c 'git log -p -G$1 --all' -
    today = log --all --since='6am' --committer='Nick Reynolds' --pretty=format:'* %B' --no-merges
    my-commits = log --committer='Nick Reynolds'
    grep-conflicts = grep --untracked '<<<<<<<'
    conflicts = diff --name-status --diff-filter=U
    open-conflicts = !fish -c 'vim (git diff --name-only --diff-filter=U)'
[push]
    default = upstream
[include]
    path = ~/.gitconfig_local
[filter "media"]
    clean = git media clean %f
    smudge = git media smudge %f
    required = true
