[core]
    editor = vim
    excludesfile= ~/.gitignore_global
[user]
	name = Nick Reynolds
	email = ndreynolds@gmail.com
[web]
    browser = google-chrome
[color]
    ui = auto
    diff = auto
	status = auto
	branch = auto
	interactive = auto
    grep = auto
[merge]
    tool = vimdiff
[github]
	user = ndreynolds
	name = Nick Reynolds
	email = ndreynolds@gmail.com
[fetch]
    recurseSubmodules = true
[alias]
    br = branch
    co = checkout
    l  = log --pretty=format:'%Cred %h %Cgreen %ar %Cblue %an: %Creset %s' --graph
    s  = status
    di = diff --cached
    dw = diff
    da = diff HEAD
