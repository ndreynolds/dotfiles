#!/usr/bin/env python

# Delete files by the length of their name.
#
# Usage:
#   lenrm [/path/to/dir] [n]
# Example:
#   lenrm . 40

import sys
import os
import shutil

def main(args):
    d = args[0]
    n = int(args[1])
    for el in os.listdir(d):
        if len(el) == n:
            path = os.path.join(d, el)
            if os.path.islink(path) or os.path.isfile(path):
                os.remove(path)
            else:
                shutil.rmtree(path)
            print 'rm %s' % path

if __name__ == '__main__':
    main(sys.argv[1:])
