#!/bin/sh

## Homebrew Packages & Apps

PACKAGES=(
  caskroom/cask/brew-cask
  cmake
  fish
  fzf
  gcc
  git
  haskell-stack
  htop
  imagemagick
  leiningen
  node 
  pcre
  rbenv 
  readline
  ruby-build 
  pandoc
  pow
  tree
  unrar
  wget
)

APPS=(
  anvil
  caffeine
  cloud
  firefox
  google-chrome
  macvim
  mpv
  sequel-pro
  spotify
  skitch
  slate
  transmission
  virtualbox
  vagrant
  vagrant-bar
)


### Bootstrap

## Install xCode / OS X Command Line Tools
xcode-select -p || xcode-select --install

## Install Homebrew
which brew || ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

brew install ${PACKAGES[*]}
brew cask install ${APPS[*]}

## Homebrew Package Follow-ups

# Install fzf shell extensions - this should be done whenever fzf is updated
/usr/local/Cellar/fzf/$(fzf --version)/install

# Install Oh My Fish for fish
curl -L https://github.com/oh-my-fish/oh-my-fish/raw/master/bin/install | fish

## Grab colors and fonts for Terminal.app
git clone --depth 1 https://github.com/altercation/solarized ~/Downloads/solarized
git clone --depth 1 https://github.com/Lokaltog/powerline-fonts ~/Downloads/powerline-fonts
