#!/bin/sh

## Homebrew Packages & Apps

PACKAGES=(
  caskroom/cask/brew-cask
  cmake
  fish
  gcc
  git
  leiningen
  node 
  pcre
  rbenv 
  readline
  ruby-build 
  pandoc
  pow
)

APPS=(
  anvil
  caffeine
  cloud
  google-chrome
  macvim
  mpv
  rdio
  sequel-pro
  skitch
  slate
  transmission
  virtualbox
  vagrant
  vagrant-bar
)


## Bootstrap

# Install xCode / OS X Command Line Tools
xcode-select -p || xcode-select --install

# Install Homebrew
which brew || ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

brew install ${PACKAGES[*]}
brew cask install ${APPS[*]}

# Grab colors and fonts for Terminal.app
git clone --depth 1 https://github.com/altercation/solarized ~/Downloads/solarized
git clone --depth 1 https://github.com/Lokaltog/powerline-fonts ~/Downloads/powerline-fonts
